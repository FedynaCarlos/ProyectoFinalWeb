<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>
  <head>
    <title>Productos</title>
  </head>
  <body>
  <%- include('./partials/header') %>
  <h2 class="tituloproduct">Nuestros productos con la mejor calidad</h2>
  <section class="allProducts" id="template-card">
      <!--div mostrar imagen-->
      <% for(let i=0; i < productos.length; i++){ %>
      <article  class="contenedor1">
          <!--contenedor1-->
          <div class="elemento1">
            <!--elemento1-->
            <img src="/images/<%= productos[i].imagen%>"  class="product_img">
          </div>
          <!--fin de elemnto1-->
          <!--descripcion del producto-->
          <div class="elemento2">
            <!--elemento 2-->
            <h3 class="nombreProdDetail"><%= productos[i].nombre%> </h3>
            <p class="descProduct"><%= productos[i].descripcion%></p>
            <p class="cepaProduct"><%= productos[i].cepa.descripcion%></p>
            <p class="categoriaProduct"><%= productos[i].categoria%></p>
            <p class="precioProduct"><%= productos[i].precio%></p>
            <% if (locals.isLogged) {%>
            <button type="reset" data-id="<%= productos[i].produc_id%>" class="boton-formulario">Agregar al carrito</button>
            <% } else { %>
            <button type="reset" data-id="<%= productos[i].produc_id%>">Debes estar logeado</button>
            <% } %>  
          </div>
        </article>
        <% } %>
    </section>

    <div class="container">
      <h4>Tus Compras</h4>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Item</th>
            <th scope="col">Cantidad</th>
            <th scope="col">Acción</th>
            <th scope="col">Total</th>
          </tr>
        </thead>
        <tbody id="items"></tbody>
        <tfoot>
          <tr id="footer">
            <th scope="row" colspan="5">Carrito vacío - comience a comprar!</th>
          </tr>
        </tfoot>
      </table>
      <div class="row" id="cards"></div>
    </div>

    <template id="template-carrito">
      <tr>
        <th class='tdCarrito' scope="row">id</th>
        <td class='tdCarrito'>Café</td>
        <td class='tdCarrito'>1</td>
        <td class='tdCarrito'>
          <button class="btn btn-info btn-sm btnSuma">
            +
          </button>
          <button class="btn btn-danger btn-sm btnResta">
            -
          </button>
        </td>
        <td class='tdCarrito'>$ <span>500</span></td>
      </tr>
    </template>

    <template id="template-footer">
      <th scope="row" colspan="2">Total productos</th>
      <td class='tdCarrito'>10</td>
      <td class='tdCarrito'>
        <button class="btn btn-danger btn-sm btnVaciar" id="vaciar-carrito">
          Limpiar
        </button>
      </td>
      <td class="font-weight-bold tdCarrito">$ <span class='totalCarrito'>5000</span></td>
    </template>
    <%- include('partials/footer') %>
    <script src="/js/productCart.js"></script>
  </body>
