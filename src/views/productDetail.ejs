<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>
  <head>
    <title>Detalle Productos2</title>
  </head>
  <body>
  <%- include('./partials/header') %>
    
  <h2 class="tituloproduct">Nuestros productos con la mejor calidad</h2>
  
  <section class="allProducts">
      <!--div mostrar imagen-->
      <% for(let i=0; i < productos.length; i++){ %>
      <article  class="contenedor1">
        
          <!--contenedor1-->
          <div class="elemento1">
            <!--elemento1-->
            <img src="/images/<%= productos[i].imagen%>"  class="product_img">
            
          </div>
          <!--fin de elemnto1-->
          <!--descripcion del producto-->
          <div class="elemento2">
            <!--elemento 2-->
            
            <h3 class="nombreProdDetail"><%= productos[i].nombre%> </h3>
            <P><%= productos[i].descripcion%></p>
            <p><%= productos[i].cepa.descripcion%></p>
            <p><%= productos[i].categoria%></p>
            <p><%= productos[i].precio%></p>
            
            <button type="reset" class="boton-formulario">Agregar al carrito</button>
          </div>
        </article>
        <% } %>

    </section>
    <%- include('partials/footer') %>
  </body>

